<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >


    <TextView
        android:id="@+id/entryName"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:text="Name of Entry"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/itemNum"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/pLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:text="Protein:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/entryName" />

    <TextView
        android:id="@+id/pAmount"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="8dp"
        android:text="100"
        app:layout_constraintStart_toEndOf="@+id/pLabel"
        app:layout_constraintTop_toBottomOf="@+id/entryName" />

    <TextView
        android:id="@+id/cLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:text="Carb:"
        app:layout_constraintStart_toEndOf="@+id/pAmount"
        app:layout_constraintTop_toBottomOf="@+id/entryName" />

    <TextView
        android:id="@+id/cAmount"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="8dp"
        android:text="11"
        app:layout_constraintStart_toEndOf="@+id/cLabel"
        app:layout_constraintTop_toBottomOf="@+id/entryName" />

    <TextView
        android:id="@+id/fLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:text="Fat:"
        app:layout_constraintStart_toEndOf="@+id/cAmount"
        app:layout_constraintTop_toBottomOf="@+id/entryName" />

    <TextView
        android:id="@+id/fAmount"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="8dp"
        android:text="11"
        app:layout_constraintStart_toEndOf="@+id/fLabel"
        app:layout_constraintTop_toBottomOf="@+id/entryName" />

    <TextView
        android:id="@+id/calorieLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:text="Calories:"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/entryName"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/calorieAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:text="2000"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/calorieLabel"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/itemNum"
        android:layout_width="38dp"
        android:layout_height="23dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:text="TextView"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>